<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.somaxi.appsomaxi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icone_somaxi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="br.com.somaxi.appsomaxi.activity.ajudaActivity"
            android:parentActivityName="br.com.somaxi.appsomaxi.activity.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.somaxi.appsomaxi.activity.MainActivity" />
        </activity>
        <activity
            android:name="br.com.somaxi.appsomaxi.activity.CadastroUsuarioActivity"
            android:parentActivityName="br.com.somaxi.appsomaxi.activity.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="br.com.somaxi.appsomaxi.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.somaxi.appsomaxi.activity.PrestarContasActivity"
            android:parentActivityName="br.com.somaxi.appsomaxi.activity.MainActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.somaxi.appsomaxi.activity.MainActivity" />
        </activity>
        <activity
            android:name="br.com.somaxi.appsomaxi.activity.RedefinirSenhaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="br.com.somaxi.appsomaxi.activity.SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.somaxi.appsomaxi.activity.MainActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>